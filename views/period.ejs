		<div style="width: 50%; margin-right: 20px;">
			<h3>Heim</h3>
			<div style="display: flex;">
				<div style="width: 50%; margin-right: 10px;">
					<form action="/<%= liga %>/addGoal/<%= data.id %>/<%= data.home.name %>/<%= period %>" method="post">
						<h4>Tor hinzufügen</h4>
						<div class="omrs-input-group">
							<label class="omrs-input-underlined">
							   <input required name="time">
							   <span class="omrs-input-label">Zeit</span>
							</label>
						</div>
						<div class="omrs-input-group">
							<label class="omrs-input-underlined">
								<input required name="torschütze" type="number">
								<span class="omrs-input-label">Torschütze</span>
							</label>
						</div>
						<div class="omrs-input-group">
							<label class="omrs-input-underlined">
							   <input name="vorlage1" type="number">
							   <span class="omrs-input-label">Vorlage 1</span>
							</label>
						</div>
						<div class="omrs-input-group">
							<label class="omrs-input-underlined">
							   <input name="vorlage2" type="number">
							   <span class="omrs-input-label">Vorlage 2</span>
							</label>
						</div>
						<button type="submit">Hinzufügen</button>
					</form>
				</div>
				<div style="width: 50%; margin-right: 10px;">
