<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/css/navbar.css">
	<!-- <link rel="stylesheet" href="/css/style.css"> -->
    <title>Startseite | API Hockeyreferre</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }
    
        td,
        th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
    
        tr:nth-child(even) {
            background-color: #dddddd;
        }
        .flex {
            display: flex;
        }
        .item {
            width: 20%;
        }
		a {
			color: black;
			text-decoration: none;
		}
    </style>
</head>
<body>
	<header id="navbar">
		<nav class="navbar-container container">
		  <a href="/api" class="home-link">
			<!-- <div class="navbar-logo"></div> -->
			API Zentrum | Hockeyreferre
		  </a>
		  <button type="button" id="navbar-toggle" aria-controls="navbar-menu" aria-label="Toggle menu" aria-expanded="false">
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		  </button>
		  <div id="navbar-menu" aria-labelledby="navbar-toggle">
			<ul class="navbar-links">
			  <li class="navbar-item"><a class="navbar-link" href="/api">Startseite</a></li>
			  <li class="navbar-item"><a class="navbar-link" href="/api/create">Spiel erstellen</a></li>
			  <li class="navbar-item"><a class="navbar-link" href="/api/editTable">Tabelle bearbeiten</a></li>
			</ul>
		  </div>
		</nav>
	</header>
    <table>
		<tr>
		<th>ID</th>
		<th>Datum</th>
		<th>Uhrzeit</th>
		<th>Heim</th>
		<th>LogoHeim</th>
		<th>ScoreHeim</th>
		<th>ScoreAway</th>
		<th>LogoAway</th>
		<th>Away</th>
		<th>Stream</th>
		</tr>
		<% data.forEach(element => { %>
			<tr href="/api/view/<%= element.id %>">
				<td><%= element.id %></td>
				<td><%= element.date %></td>
				<td><%= element.time %></td>
				<td><%= element.home %></td>
				<td><%= element.logoHome %></td>
				<td><%= element.scoreHome %></td>
				<td><%= element.scoreAway %></td>
				<td><%= element.logoAway %></td>
				<td><%= element.away %></td>
				<td><%= element.stream %></td>
				<td><button><a href="/api/view/<%= element.id %>/<%= element.home %>/<%= element.away %>/<%= element.date %>">zum Spiel</a></button></td>
				<td>
						<form action="/api/delete/<%= element.id %>" method="POST" target="_blank">
						<input type="text" style="display: none;"
							name="id"
							value="<%= element.id %>">
						<button type="submit">Delete</button>
						</form>
				</td>
			</tr>
		<% }) %>
</table>
<div style="margin-top: 50px;"></div>
<table>
	<tr>
		<th>Name</th>
		<th>zum Team</th>
	</tr>
	<% team.forEach(element => { %>
		<tr>
			<td><%= element.name %></td>
			<td><button><a href="/api/mannschaft/<%= element.name %>">zur Spielerliste</a></button></td>
		</tr>
<% }) %>
</table>

</body>
</html>